
  <body>
    <nav class="navbar navbar-expand-lg py-4 navbar-dark bg-primary navbar-custom">
        <a href="/" class="navbar-brand" href="#">MYFITNESSZONE<i class="fa fa-heartbeat" aria-hidden="true"></i></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <a href="/dashboard" class="btn btn-primary btn-lg"><i class="fa fa-home fa-1x" aria=hidden="true"></i> Home </a>

            </ul>

            <i class="fa-solid fa-dumbbell fa-2x"></i>

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <p id="welcome"> Welcome, {{ name }}! </p>
            </form>

        </div>
    </nav>

    <div class="row main">
        <div class="card-alignment" style="width: 32rem;">
            <form class="login-form"> 
                <h3> Profile Information </h3>
                <div>
                    <div>
                        <label for="first-name" id="first-name-label"> 
                            <p>
                                First Name
                            </p> 
                        </label>
                    </div>
                    <div> 
                        <input class="form-input" type="text" id="first-name" name="first-name" value="{{ name }}" /> 
                    </div>
                    <div>
                        <label for="last-name" id="last-name-label"> 
                            <p>
                                Last Name
                            </p>     
                        </label>
                    </div>
                    <div> 
                        <input class="form-input" type="text" id="last-name" name="last-name" value="{{ last_name }}" /> 
                    </div>
                    <div>
                        <label for="last-name" id="last-name-label"> 
                            <p>
                                Gender
                            </p>     
                        </label>
                    </div>
                    <div> 
                        <input class="form-input" type="text" id="last-name" name="last-name" value="{{ gender }}" /> 
                    </div>
                    <div>
                        <label for="last-name" id="last-name-label"> 
                            <p>
                                Age
                            </p>     
                        </label>
                    </div>
                    <div> 
                        <input class="form-input" type="text" id="last-name" name="last-name" value="{{ age }}" /> 
                    </div>
                    <div>
                        <label for="last-name" id="last-name-label"> 
                            <p>
                                Height
                            </p>     
                        </label>
                    </div>
                    <div> 
                        <input class="form-input" type="text" id="last-name" name="last-name" value="{{ height }}" /> 
                    </div>
                    <div>
                        <label for="last-name" id="last-name-label"> 
                            <p>
                                Weight
                            </p>     
                        </label>
                    </div>
                    <div> 
                        <input class="form-input" type="text" id="last-name" name="last-name" value="{{ weight }}" /> 
                    </div>
                    <div>
                        <label for="email" id="email-label"> 
                            <p>
                                E-Mail
                            </p>     
                        </label>
                    </div>
                    <div> 
                        <input class="form-input" type="text" id="email" name="email" value="{{ email }}" /> 
                    </div>
                </div>
                <button class="btn btn-primary btn-lg" id="saveBtn"> Save </button>
            </form>

        </div>

    </div>
      
    <script src="./assets/js/profile.js"></script>
